# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-change-in-production

# Database Configuration
DATABASE_URL=sqlite:///aurora_motors.db
# For PostgreSQL: postgresql://username:password@localhost/aurora_motors
# For MySQL: mysql+pymysql://username:password@localhost/aurora_motors

# Application Settings
APP_NAME=Aurora Motors
APP_URL=http://localhost:5000
DEBUG=True

# Mail Configuration (for password reset, notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ACCESS_TOKEN_EXPIRES=3600

# Upload Configuration
UPLOAD_FOLDER=static/uploads
MAX_CONTENT_LENGTH=16777216

# Pagination
POSTS_PER_PAGE=10

# API Keys (if needed)
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
GOOGLE_MAPS_API_KEY=